{% extends 'base.html.twig' %}

{% block title %}Tous les films{% endblock %}

{% block body %}

    {% for film in films %}


        <hr>
        Titre du film : <h1>{{ film.name }}</h1> <br>
        <strong>Qui raconte l'histoire de : </strong>{{ film.synopsys }} <br>
        <strong>{{ film.producer }}</strong>
        qui est sorti le : {{ film.dateSortie|date('Y') }}
         <p class="my-4">Qui a écrit la fiche du film ? <strong>{{ film.user.username }}</strong></p>
        <a href="{{ path('film', {id:film.id}) }}" class="btn btn-outline-secondary">Plus de détails</a>
        <hr>

    {% endfor %}

{% endblock %}
